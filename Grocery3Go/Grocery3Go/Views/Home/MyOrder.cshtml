@model Grocery3Go.Models.Views.MyOrderViewModel
@{
    ViewBag.Title = "MyOrder";
}

<h2>My Order</h2>
<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    @*Loops through local Shopping Cart List*@
    @foreach (var item in Model.ShoppingCartList)
    {
        <tr>
            <td>@item.Product.Name</td>
            <td>@item.Product.Price.ToString("C")</td>
            <td>@Html.ActionLink("Remove Item", "DeleteFromCart", new { shoppingCartItemId = item.ShoppingCartItemId })</td>
        </tr>
    }
</table>
<h2>Your order total is : @Model.Total.ToString("C")</h2>